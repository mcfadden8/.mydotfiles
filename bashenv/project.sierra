#!/bin/bash
PS3='Please enter session choice: '
options=("lriot" "umpire")
select opt in "${options[@]}"
do
  case $opt in
      "umpire")
          export MJM_SESSION=$opt
          break
          ;;
      "lriot")
          export MJM_SESSION=$opt
          break
          ;;
      *)
          export MJM_SESSION="lriot"
          break
          ;;
  esac
done

