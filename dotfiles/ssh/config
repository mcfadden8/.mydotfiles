# Default for all hosts
Host *
    IdentityFile        ~/.ssh/id_rsa
    LogLevel            ERROR
    User                martymcf

Host rzslicnox
    ForwardAgent        no
    ForwardX11          no
    ForwardX11Trusted   no
    HostName            rzslic.llnl.gov

Host oslicnox
    ForwardAgent        no
    ForwardX11          no
    ForwardX11Trusted   no
    HostName            oslic.llnl.gov

Host rzslic oslic
    ControlMaster       auto
    ControlPath         /tmp/%r@%h:%p
    ControlPersist      12h
    ForwardAgent        yes
    ForwardX11          yes
    ForwardX11Trusted   yes
    HostName            %h.llnl.gov

Host *github.com *.gitlab.com
    ForwardAgent        no
    ForwardX11          no
    ForwardX11Trusted   no

Host czgitlab*
    ForwardAgent        no
    ForwardX11          no
    ForwardX11Trusted   no
    ProxyCommand ssh oslicnox nc %h 7999

Host rz-bitbucket.llnl.gov
    ForwardAgent        no
    ForwardX11          no
    ForwardX11Trusted   no
    ProxyCommand ssh rzslicnox nc %h 7999

Host rzalastor rzansel rzcrayz rzgenie rzhasgpu rzmanta rztopaz rztrona rzuseq borax catalyst corona pascal quartz ray surface syrah lassen
    ControlMaster       auto
    ControlPath         /tmp/%r@%h:%p
    ControlPersist      12h
    ForwardAgent        yes
    ForwardX11          yes
    ForwardX11Trusted   yes
    ProxyCommand ssh rzslic nc %h 622
