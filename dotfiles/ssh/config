# Default for all hosts
Host *
    LogLevel            ERROR
    ControlMaster       auto
    ControlPath         /tmp/%r@%h:%p
    ControlPersist      120h
    IdentityFile        ~/.ssh/id_rsa
    User                martymcf

Host *github.com *bitbucket.org *gitlab.com *stash.llnl.gov nst-code.llnl.gov
    # Don't forward for Git servers
    # Doing so can cause strange, though benign, warning messages on connection
    ForwardAgent        no
    ForwardX11          no
    ForwardX11Trusted   no
    ControlPersist      no

Host rz-bitbucket.llnl.gov
    # Don't forward for Git servers
    # Doing so can cause strange, though benign, warning messages on connection
    ForwardAgent        no
    ForwardX11          no
    ForwardX11Trusted   no
    ControlPersist      no
    ProxyCommand ssh rzgw.llnl.gov nc %h 7999

Host rzalastor rzansel rzgenie rzhasgpu rzmanta rztopaz rztrona rzuseq
    ForwardAgent        yes
    ForwardX11          yes
    ForwardX11Trusted   yes
    HostName     %h.llnl.gov

Host borax catalyst crayz lassen pascal quartz ray surface syrah tbgw1
    ForwardAgent        yes
    ForwardX11          yes
    ForwardX11Trusted   yes
    HostName     %h.llnl.gov
